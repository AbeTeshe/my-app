generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Transaction {
  id          Int      @id @default(autoincrement())
  customerTin String
  mrc         String
  fsNo        String
  buyerTin    String?
  date        DateTime
  item        String
  qty         Int
  lineTotal   Float

  @@map("transactions") // optional: maps to a SQL table named "transactions"
}


model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}